<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_c_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="#00000000"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
    
   <LinearLayout
       	android:id="@+id/ll_c_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp">
        <ImageButton
            android:id="@+id/ib_c_call"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/call">
            </ImageButton>
            
        <ImageButton
            android:id="@+id/ib_c_record"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#00ffffff"
             android:scaleType="fitCenter"
            android:src="@drawable/record">
            </ImageButton>
            
 
            
        <ImageButton
            android:id="@+id/ib_c_contacts"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#00ffffff"
             android:scaleType="fitCenter"
            android:src="@drawable/contact">
            </ImageButton>
            
        <ImageButton
            android:id="@+id/ib_c_menu"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#00ffffff"
             android:scaleType="fitCenter"
            android:src="@drawable/menu">
            </ImageButton>
        
        </LinearLayout>
        
   <RelativeLayout 
       android:id="@+id/ll_call_pad"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:visibility="gone">

    <ImageView
        android:id="@+id/iv_cb_keyboard"
        android:layout_alignParentLeft="true"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:src="@drawable/calldown" />

    <ImageView
        android:id="@+id/iv_cb_del"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/del" />

    <ImageView
        android:id="@+id/iv_cb_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/call_image" />
    
</RelativeLayout>

</LinearLayout>
